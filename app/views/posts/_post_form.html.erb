<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div class="errors">
      <%= pluralize(@post.errors.count, "error") %>
      <%= @post.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    </div>
  <% end %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :tag_list %> <br>
    <%= f.text_field :tag_list %>
  </p>
  
  <p>
    <%= f.label :thumbnail %> <br>
    <%= f.file_field :thumbnail %>
  </p>

  <p>
    <%= f.label :body %> <br>
    <%= f.cktext_area :body %>
  </p>

  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>

<% end %>
